/**
 * 1-bit register.
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out[t+1] = out[t] (no change)
 */

CHIP Bit {
    IN in, load;
    OUT out;
	
	
    PARTS:
	Mux(b=in,a=opast, sel=load,out=flipinput);
	DFF(in=flipinput,out=opast,out=out);
}
